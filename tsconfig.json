{
  "extends": "@spotify/tsconfig",
  "compilerOptions": {
    // "allowJs": true,
    // "allowSyntheticDefaultImports": true,
    "lib": ["dom", "dom.iterable", "esnext"],
    // "noImplicitThis": false,
    "target": "esnext",
    "moduleResolution": "node",
    "incremental": true,
    "tsBuildInfoFile": "./.tsbuildinfo",
    "skipLibCheck": true,
    "jsx": "react-jsx",
    // "baseUrl": "src/@types",
    "baseUrl": ".",
    "paths": {
      // "*": ["*"],
      "*": ["node_modules/*", "src/@types/*"]
    }

  },
  "include": [
    "src/**/*",
    ".eslintrc.js",
    "babel.config.js"
  ],
  "exclude": [
    "dist",
    "node_modules",
    "/test",
    "**/*.test.ts",
    "**/*.spec.ts"
  ]
}
